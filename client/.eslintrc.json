{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "semi": ["error", "never"],
      "object-curly-spacing": [2, "never"],
      "comma-dangle": ["error", "never"],
      "react/prop-types": 0,
      "jsx-quotes": ["error", "prefer-double"],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}